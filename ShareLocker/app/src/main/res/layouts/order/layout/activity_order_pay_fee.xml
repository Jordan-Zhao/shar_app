<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.share.locker.ui.order.OrderPayFeeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--title-->
        <com.share.locker.ui.component.ActivityTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="支付租金" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="订单编号:"
                android:textSize="8pt"
                android:layout_marginRight="5dp"
                android:gravity="right"/>
            <TextView
                android:id="@+id/pay_fee_order_id_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="8pt"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="租用宝贝:"
                android:textSize="8pt"
                android:gravity="right"/>
            <TextView
                android:id="@+id/pay_fee_item_title_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格:"
                android:textSize="8pt"
                android:gravity="right"/>
            <TextView
                android:id="@+id/pay_fee_price_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="租用时间:"
                android:textSize="8pt"
                android:gravity="right"/>
            <TextView
                android:id="@+id/pay_fee_time_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="租金:"
                android:textSize="8pt"
                android:gravity="right"/>
            <TextView
                android:id="@+id/pay_fee_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="支付方式:"
                android:textSize="8pt"
                android:gravity="right"/>
            <RadioGroup
                android:id="@+id/pay_fee_way_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/pay_fee_way_alipay"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="支付宝"/>
                <RadioButton
                    android:id="@+id/pay_fee_way_wechat"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="微信"
                    android:layout_marginLeft="10dp"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/pay_fee_btn"
            style="@style/locker_button_long"
            android:text="去支付"/>

    </LinearLayout>
</ScrollView>
