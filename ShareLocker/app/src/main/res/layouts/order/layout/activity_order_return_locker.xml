<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.share.locker.ui.order.OrderReturnLockerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--title-->
        <com.share.locker.ui.component.ActivityTitleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="还件" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="租用宝贝:"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_return_locker_title_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="还件地址:"
                android:textSize="8pt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_return_locker_machine_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="还件二维码:"
                    android:textSize="8pt"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/item_return_locker_qrcode_expire_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:textSize="8pt"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_return_locker_qr_img"
                    android:layout_width="250dp"
                    android:layout_height="250dp" />

                <TextView
                    android:id="@+id/item_return_locker_qr_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textSize="8pt"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!--模拟柜门操作-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <Button
                android:id="@+id/mock_scan_return_qrcode_btn"
                style="@style/locker_button_small"
                android:text="模拟柜门扫码存件" />
            <Button
                android:id="@+id/mock_return_item_btn"
                style="@style/locker_button_small"
                android:text="模拟放入宝贝并关闭柜门"
                android:layout_marginTop="5dp"/>
            <Button
                android:id="@+id/mock_check_item_btn"
                style="@style/locker_button_small"
                android:text="模拟管理员检查"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
