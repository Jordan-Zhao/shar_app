<?xml version="1.0" encoding="utf-8"?><!-- List中的Item view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mine_rent_item_img_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/mine_rent_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                style="@style/locker_text_view_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="押         金:"
                    style="@style/locker_text_view_normal"/>

                <TextView
                    android:id="@+id/mine_rent_item_deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/locker_text_view_normal"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="价         格:"
                    style="@style/locker_text_view_normal"/>

                <TextView
                    android:id="@+id/mine_rent_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/locker_text_view_normal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租用时间:"
                    style="@style/locker_text_view_normal"/>

                <TextView
                    android:id="@+id/mine_rent_item_create_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/locker_text_view_normal"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_rent_item_status"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="租用中"
                android:textColor="@color/red"
                style="@style/locker_text_view_small" />

            <TextView
                android:id="@+id/mine_rent_item_pay_deposit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="支付押金"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mine_rent_item_take_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="取件"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/mine_rent_item_return_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_button"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="还件"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>


    <!--分割线-->
    <include layout="@layout/split_line" />
</LinearLayout>