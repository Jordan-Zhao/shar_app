<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.share.locker.ui.item.PublishItemActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <!--title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:padding="10dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/publish_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/back" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="发布宝贝"
                android:textSize="10pt" />
        </LinearLayout>

        <!--照片缩略图,横向滚动-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical">
            <!--添加照片按钮-->
            <LinearLayout
                android:id="@+id/publish_add_photo_layout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/grey"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/camera1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加照片"
                    android:textSize="8pt" />
            </LinearLayout>
            <!--缩略图list-->
            <com.share.locker.ui.component.HorizontalListView
                android:id="@+id/publish_photo_list"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="2"></com.share.locker.ui.component.HorizontalListView>
        </LinearLayout>

        <include layout="@layout/split_line" />

        <!--标题-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="标题(必填)"
                android:textSize="6pt" />

            <EditText
                android:id="@+id/publish_title"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@mipmap/card_9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>

        <include layout="@layout/split_line" />

        <!--价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="价格(必填)"
                android:textSize="6pt" />

            <EditText
                android:id="@+id/publish_price_time_txt"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@mipmap/card_9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <Spinner
                android:id="@+id/publish_price_time_unit_selector"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:entries="@array/price_time_unit"
                android:gravity="center"
                android:textSize="6pt"></Spinner>

            <EditText
                android:id="@+id/publish_price_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/card_9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="元"
                android:textSize="6pt" />
        </LinearLayout>

        <include layout="@layout/split_line" />

        <!--押金-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="押金(必填)"
                android:textSize="6pt" />

            <EditText
                android:id="@+id/publish_deposit_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@mipmap/card_9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="元"
                android:textSize="6pt" />
        </LinearLayout>

        <include layout="@layout/split_line" />

        <!--柜门尺寸-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="柜门尺寸(必填)"
                android:textSize="6pt" />

            <Spinner
                android:id="@+id/publish_locker_size_selector"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:entries="@array/locker_size"
                android:gravity="center"
                android:textSize="6pt"></Spinner>
        </LinearLayout>
        <!--箱柜-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="附近可选箱柜"
                android:textSize="6pt" />

            <Spinner
                android:id="@+id/publish_machine_selector"
                android:layout_width="wrap_content"
                android:minWidth="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="6pt"></Spinner>
        </LinearLayout>

        <include layout="@layout/split_line" />

        <!--描述-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="描述"
                android:textSize="6pt"/>

            <EditText
                android:id="@+id/publish_description_txt"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@mipmap/card_9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
        </LinearLayout>

        <!--是否上架-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <CheckBox
                android:id="@+id/publish_status_cbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="是否上架" />
        </LinearLayout>

        <Button
            android:id="@+id/publish_submit_btn"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/btn_action"
            android:text="发布"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
