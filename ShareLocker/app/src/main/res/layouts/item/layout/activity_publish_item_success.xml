<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.share.locker.ui.item.PublishItemSuccessActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <!--title-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:gravity="center_vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="宝贝发布成功"
                android:textSize="10pt"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/publish_success_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/blue"
            android:textSize="14pt" />

        <TextView
            android:id="@+id/publish_success_tip_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="8pt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <ImageView
            android:id="@+id/publish_success_qr_img"
            android:layout_width="300dp"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/publish_success_qr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="8pt"
            android:textStyle="bold" />

        <!--模拟柜门操作-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mock_scan_qrcode_btn"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/grey"
                android:padding="5dp"
                android:text="模拟柜门扫码存件"
                android:textColor="@color/blue"
                android:textSize="6pt"
                android:textStyle="bold" />
            <Button
                android:id="@+id/mock_put_item_btn"
                style="?android:textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@color/grey"
                android:padding="5dp"
                android:text="模拟放入宝贝并关闭柜门"
                android:textColor="@color/blue"
                android:textSize="6pt"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
