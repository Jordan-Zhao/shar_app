<?xml version="1.0" encoding="utf-8"?><!-- 首页list中的head view -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--banner-->
    <!--图片大小：360*150-->
    <com.youth.banner.Banner
        android:id="@+id/banner_home"
        android:layout_width="match_parent"
        android:layout_height="150dp" /><!--图片尺寸应该是1080*150-->

    <!--推广位-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <!--left-->
        <LinearLayout
            android:id="@+id/opt_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!--图片大小：112*130-->
            <ImageView
                android:id="@+id/opt_left_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/item_left" />

            <TextView
                android:id="@+id/opt_left_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="带妹子去兜风吧~"
                android:textSize="6pt" />
        </LinearLayout>

        <!--right-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:orientation="vertical">
            <!--right1-->
            <LinearLayout
                android:id="@+id/opt_right1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--图片大小：75*75-->
                <ImageView
                    android:id="@+id/opt_right_img1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:src="@mipmap/item_right2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="23"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/opt_right_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="这是光盘"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/opt_right_txt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="里面是什么？里面是什么？里面是什么？里面是什么？"
                        android:textSize="6pt" />
                </LinearLayout>
            </LinearLayout>

            <!--right2-->
            <LinearLayout
                android:id="@+id/opt_right2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/opt_right_img2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:src="@mipmap/item_right1" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="23"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/opt_right_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:text="这是游戏"
                        android:textSize="8pt"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/opt_right_txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="里面是什么？里面是什么？里面是什么？里面是什么？"
                        android:textSize="6pt" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_repeat_split"
            android:layout_gravity="center_vertical"></FrameLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门宝贝"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_repeat_split"
            android:layout_gravity="center_vertical"></FrameLayout>
    </LinearLayout>

</LinearLayout>