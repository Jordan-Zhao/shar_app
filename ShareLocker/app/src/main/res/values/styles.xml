<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ================ 弹框start==========-->
    <style name="alert_dialog" parent="android:Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/float_transparent</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="dialog_blue_button" parent="android:Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">31dp</item>
        <item name="android:background">@drawable/blue_button_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>
    <!-- ================ 弹框end==========-->


    <!-- ================ 按钮start==========-->
    <style name="locker_button_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_button_color</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="locker_button_long">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/shape_button_color</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- ================ 按钮end==========-->


    <!-- ================ activity title start==========-->
    <style name="locker_activity_title_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_button_color</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- ================ activity title end==========-->


    <!-- ================ 标题 start==========-->
    <style name="locker_text_view_title_biger">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/black_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="locker_text_view_title_big">
        <item name="android:textSize">10pt</item>
        <item name="android:textColor">@color/black_title</item>
    </style>
    <style name="locker_text_view_title">
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/black_title</item>
    </style>
    <style name="locker_text_view_title_small">
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/black_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--================ 标题 end==========-->


    <!-- ================ 文本 start==========-->
    <style name="locker_text_view_big">
        <item name="android:textSize">8pt</item>
    </style>
    <style name="locker_text_view_normal">
        <item name="android:textSize">7pt</item>
    </style>
    <style name="locker_text_view_small">
        <item name="android:textSize">6pt</item>
    </style>
</resources>
